<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Thermal Preview ImageView -->
    <ImageView
        android:id="@+id/thermalImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:contentDescription="Thermal Camera Preview" />

    <!-- Status overlay -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#80000000">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thermal_not_connected"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/temperatureRangeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature Range: N/A"
            android:textColor="#CCFFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/frameCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frames: 0"
            android:textColor="#CCFFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>